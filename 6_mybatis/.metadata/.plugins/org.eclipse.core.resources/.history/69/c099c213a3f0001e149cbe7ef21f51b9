<?xml version="1.0" encoding="UTF-8"?>
<!-- 
	* DOCTYPE : 문서유형, 설정된 값으로 전체를 감싸는 태그로 구성
	* DTD : 유효성 검사
 -->
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- configuration : 환경 설정 -->
<configuration>
	<!-- * settings : mybatis 구동 시 선언할 설정들을 작성하는 영역 -->
	<settings>
		<!-- 데이터가 null값으로 전달되었을 때, 빈 값이 아닌 NULL로 설정 (반드시 대문자로 NULL로 설정!)  --> 
		<setting name="jdbcTypeForNull" value="NULL"/>
	</settings>
	
	<!-- * typeAlias : vo/dto 객체들의 전체 클래스명을 단순한 클래스명으로 사용하기 위해 
						별칭을 등록할 수 있는 영역 
	 -->
	<typeAliases>
		<!-- 추후 작성 예정 -->
	</typeAliases>
	
	<!--  * environment : mybatis에서 연동할 DB정보를 작성하는 영역 -->
	<environments default="develop">
		<!--  여러 개를 설정한 경우 기본 값은 상위 태그에 default 속성으로 설정                                      -->
		<environment id="develop">
			<!-- * transactionManage : type="JDBC|MANAGED"
					- JDBC : 트랜잭션 처리를 직접 관리	(수동 commit)
					- MANAGED : 트랜잭션 처리에 관여하지 않음 (자동 commit)
			 -->
			<transactionManager type="JDBC" />
			
			<!-- 
				* dataSource : POOLED | UNPOOLED (ConnectionPool 사용여부)
				
				-> ConnectionPool : Connection 객체를 보관할 수 있는 영역
									한번 생성된 Connecion 객체를 담아두고 재사용
			 -->
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
				<property name="username" value="C##mybatis"/>
				<property name="password" value="mybatis" />
			</dataSource>
		</environment>
		<!--  
		<environment id="test1"></environment>
		<environment id="test2"></environment>
		-->
	</environments>
</configuration>