<script>

	const pwFail = (event) => {
		event.preventDefault();
		
		let pw = document.getElementById("pw").value;
	    let pw2 = documetn.getElementById("pw2").value;
	}
    
    
    function pwFail() {
        if(pw.value != pw2.value) {
            alert("비밀번호가 일치하지 않습니다!");
            return false;
        } else {
            return true;
        }
    }
